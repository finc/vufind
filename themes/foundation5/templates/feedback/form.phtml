<!-- feedback - FORM.phtml -->
<h2><?=$this->transEsc("Send us your feedback!")?></h2>
<?=$this->flashmessages() ?>
<form name="feedback" method="post" action="<?=$this->url('feedback-email')?>">
  <div class="row">
    <label class="small-3 columns" for="name"><?=$this->transEsc("feedback_name")?></label>
    <div class="small-9 columns">
      <input type="text" id="name" name="name" value="<?=$this->escapeHtmlAttr(isset($name) ? $name : '')?>" class="auto-width"/>
    </div>
  </div>
  <div class="row">
    <label class="small-3 columns" for="email"><?=$this->transEsc("Email")?></label>
    <div class="small-9 columns">
      <input type="email" id="email" name="email" value="<?=$this->escapeHtmlAttr(isset($email) ? $email : '')?>" class="auto-width"/>
    </div>
  </div>
  <div class="row">
    <label class="small-12 medium-3 columns" for="comments"><?=$this->transEsc("Comments")?></label>
    <div class="small-12 medium-9 columns">
      <textarea id="comments" name="comments" class="auto-width" required><?=$this->escapeHtml(isset($comments) ? $comments : '')?></textarea>
    </div>
  </div>
  <?=$this->recaptcha()->html($this->useRecaptcha) ?>
  <div class="row">
    <div class="small-4 small-offset-8 medium-9 medium-offset-3 columns">
      <input type="submit" class="button small" value="<?=$this->transEsc("Send")?>" />
    </div>
  </div>
</form>
<!-- feedback - FORM.phtml end -->