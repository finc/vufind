  <?=$this->render('Helpers/ils-offline.phtml', ['offlineModeMsg' => 'ils_offline_login_message'])?>
<? else: ?>
  <h2><?=$this->transEsc('Login')?></h2>
  <?=$this->flashmessages()?>
    
  <? if ($hideLogin): ?>
    <div data-alert class="alert-box alert" tabindex="0" aria-live="assertive" role="alertdialog"><?=$this->transEsc('login_disabled')?></div>
