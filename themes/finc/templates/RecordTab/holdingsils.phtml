              <span class="notes"><?=$this->transEsc("Notes")?>:</span>
              <ul class="notes">
                <? foreach ($row['notes'] as $note): ?>
                  <li><?=$note?></li>
                <? endforeach; ?>

                <? foreach ($row['item_notes'] as $item_note): ?>
                  <li><?=$this->escapeHtml($item_note) ?></li>
                <? endforeach; ?>
              </ul>
            <? endif; ?>
            <? if (!$block && isset($row['link']) && $row['link']): ?>
