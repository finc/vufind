      <a href="<?=$holding['locationhref']?>" target="_blank"><?=$locationText?></a>
    <? else: ?>
      <?=$locationText?>
    <? endif; ?>
  </h3>
<table class="table">
  <caption class="sr-only"><?=$this->transEsc('Holdings details from')?> <?=$this->transEsc($holding['location'])?></caption>
