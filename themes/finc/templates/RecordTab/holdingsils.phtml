    $block = !$check && isset($row['addLink']) && $row['addLink'] === 'block';
    $blockStorageRetrievalRequest = !$checkStorageRetrievalRequest && isset($row['addStorageRetrievalRequestLink']) && $row['addStorageRetrievalRequestLink'];
